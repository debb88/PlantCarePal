<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLoginRegister"
    tools:context=".ui.guidance.DetailGuidanceActivity">

    <TextView
        android:id="@+id/title_detail_guidance"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/title_detail_guide"
        />

    <ImageButton
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/backgroundLoginRegister"
        app:layout_constraintTop_toTopOf="@+id/title_detail_guidance"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_back"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/title_detail_guidance"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/desc_detail_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:justificationMode="inter_word"
                android:text="@string/Content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/img_detail_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/desc_detail_guide"
                app:layout_constraintLeft_toLeftOf="@id/desc_detail_guide"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_detail_guide"
                app:layout_constraintRight_toRightOf="@id/desc_detail_guide"
                />

            <TextView
                android:id="@+id/step1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/img_detail_guide"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/content_step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/content_detail_guide"
                app:layout_constraintTop_toBottomOf="@id/step1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:justificationMode="inter_word"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/step2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/content_step1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/step2"
                />

            <TextView
                android:id="@+id/content_step2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/content_detail_guide"
                app:layout_constraintTop_toBottomOf="@id/step2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/desc_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/content_step2"
                android:text="@string/Content"
                />
            <TextView
                android:id="@+id/desc_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/desc_1"
                android:layout_marginTop="20dp"
                android:text="@string/Content"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>